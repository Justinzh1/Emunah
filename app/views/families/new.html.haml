= form_tag families_path do
	.container
		%h1 Create a Family
		.jumbotron
			.row		
				= label :family, :discovery, 'How did you hear about Emunah?'
				%br
				= text_field :family, 'discovery', :id => 'discovery'
			%br
			.row		
				= label :family, :hobbies, 'Hobbies?'
				%br
				= text_field :family, 'hobbies', :id => 'hobbies'
			%br
			.row		
				= label :family, :skills, 'Skills?'
				%br
				= text_field :family, 'skills', :id => 'skills'
			%br
			.row		
				= label :family, :activities, 'Activities?'
				%br
				= text_field :family, 'activities', :id => 'activities'
			%br
			.row		
				= label :family, :committees, 'Committees?'
				%br
				= text_field :family, 'committees', :id => 'committees'
			%br
			.row		
				= label :family, :membership, 'Membership status?'
				%br
				= select :family, :membership, ['Member', 'Non-Member',
												'Prospective Member',
												'Past Member', 'Friend of BE',
												'Deceased'], :id => 'is_child'
			%br

	.container
		%h1 Create Person 1
		.jumbotron
			.row		
				= label :person, :first_name, 'First Name'
				%br
				= text_field :person, 'first_name', :id => 'first_name'
			%br
			.row		
				= label :person, :last_name, 'Last Name'
				%br
				= text_field :person, 'last_name', :id => 'last_name'
			%br
			.row		
				= label :person, :hebrew_name, 'Hebrew Name'
				%br
				= text_field :person, 'hebrew_name', :id => 'hebrew_name'
			%br
			.row		
				= label :person, :birthday, 'Birthday'
				%br
				= date_select(:person, 'birthday', :id => 'birthday', :start_year => 1900)
			%br
			.row		
				= label :person, :home_address, 'Home Address'
				%br
				= text_field :person, 'home_address', :id => 'home_address'
			%br
			.row		
				= label :person, :telephone, 'Telephone #'
				%br
				= text_field :person, 'telephone', :id => 'telephone'
			%br
			.row		
				= label :person, :telephone_type, 'Telephone Type'
				%br
				= text_field :person, 'telephone_type', :id => 'telephone_type'
			%br
			.row		
				= label :person, :email_address, 'Email Address'
				%br
				= text_field :person, 'email_address', :id => 'email_address'
			%br
			.row		
				= label :person, :employer, 'Employer'
				%br
				= text_field :person, 'employer', :id => 'employer'
			%br
			.row		
				= label :person, :occupation, 'Occupation'
				%br
				= text_field :person, 'occupation', :id => 'occupation'
			%br
			.row		
				= label :person, :anniversary, 'Anniversary'
				%br
				= text_field :person, 'anniversary', :id => 'anniversary'
			%br
			.row		
				= label :person, :is_child, 'Is a child?'
				%br
				= select :person, :is_child, ['Yes', 'No'], :id => 'is_child'
			%br
			.row		
				= label :person, :allow_contact, 'Available for contact?'
				%br
				= select :person, :allow_contact, ['Yes', 'No'], :id => 'allow_contact'
			%br

	.container
		%h1 Create Person 2
		.jumbotron
			.row		
				= label :person2, :first_name, 'First Name'
				%br
				= text_field :person2, 'first_name', :id => 'first_name2'
			%br
			.row		
				= label :person2, :last_name, 'Last Name'
				%br
				= text_field :person2, 'last_name', :id => 'last_name2'
			.row		
				= label :person2, :hebrew_name, 'Hebrew Name'
				%br
				= text_field :person2, 'hebrew_name', :id => 'hebrew_name2'
