			%br
			.row		
				= label :person2, :telephone, 'Telephone #'
				%br
				= text_field :person2, 'telephone', :id => 'telephone2'
			%br
			.row		
				= label :person2, :telephone_type, 'Telephone Type'
				%br
				= text_field :person2, 'telephone_type', :id => 'telephone_type2'
			%br
			.row		
				= label :person2, :email_address, 'Email Address'
				%br
				= text_field :person2, 'email_address', :id => 'email_address2'
			%br
			.row		
				= label :person2, :employer, 'Employer'
				%br
				= text_field :person2, 'employer', :id => 'employer2'
			%br
			.row		
				= label :person2, :occupation, 'Occupation'
				%br
				= text_field :person2, 'occupation', :id => 'occupation2'
			%br
			.row		
				= label :person2, :anniversary, 'Anniversary'
